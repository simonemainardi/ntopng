	\mkdir -p ${NTOPNG_BUILD}/usr/share/ntopng/httpdocs/ssl ${NTOPNG_BUILD}/etc/ntopng
	cp -r $(NTOPNG_HOME)/nedge/packages/ ${NTOPNG_BUILD}
